<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_ohsAriel"
    android:background="#0097B2"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/bold"
        android:text="Thank you for trusting"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:id="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/radius"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:src="@drawable/checkariel"
            android:layout_width="200dp"
            android:layout_height="200dp"

            />
        <TextView
            android:id="@+id/succAriel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="On his way....\nETA: 4 minutes"
            android:fontFamily="@font/bold"
            android:layout_marginBottom="30dp"
            />
        <Button
            android:id="@+id/homeABtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_home_24"
            app:backgroundTint="@color/main"/>


    </LinearLayout>


</LinearLayout>